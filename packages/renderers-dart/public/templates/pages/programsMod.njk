{% extends "layout.njk" %}
{% import "macros.njk" as macros %}

{% block main %}
// This file exports program information for all programs in the SDK.

{% for program in programsToExport %}
/// Program information for the {{ program.name | pascalCase }} program.
class {{ program.name | pascalCase }}Program {
  /// The program ID for the {{ program.name | pascalCase }} program.
  static final PublicKey programId = PublicKey.fromBase58("{{ program.publicKey }}");
  
  {% if program.metadata and program.metadata.address %}
  /// The program metadata address.
  static final PublicKey metadataAddress = PublicKey.fromBase58("{{ program.metadata.address }}");
  {% endif %}

  /// The program name.
  static const String name = "{{ program.name }}";
}
{% endfor %}
{% endblock %}